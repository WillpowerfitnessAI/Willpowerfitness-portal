
import { useState } from 'react';
import Login from './components/lib/Login';
import ChatBox from './components/lib/ChatBox';
import ContactForm from './components/pages/ContactForm';

function App() {
  const [user, setUser] = useState(null);
  const [currentView, setCurrentView] = useState('home'); // 'home', 'contact', 'chat'

  return (
    <div style={{ 
      minHeight: '100vh',
      backgroundColor: '#f8f9fa',
      padding: '2rem', 
      fontFamily: '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif'
    }}>
      <div style={{ textAlign: 'center', marginBottom: '2rem' }}>
        <h1 style={{ 
          fontSize: '2.5rem', 
          margin: '0 0 0.5rem 0',
          background: 'linear-gradient(45deg, #007bff, #28a745)',
          WebkitBackgroundClip: 'text',
          WebkitTextFillColor: 'transparent',
          fontWeight: 'bold'
        }}>
          WillpowerFitness AI üèãÔ∏è
        </h1>
        <p style={{ fontSize: '1.2rem', color: '#666', margin: 0 }}>
          Your Personal AI Fitness Coach
        </p>

        {/* Navigation */}
        <div style={{ marginTop: '1rem' }}>
          <button
            onClick={() => setCurrentView('home')}
            style={{
              padding: '0.5rem 1rem',
              margin: '0 0.5rem',
              backgroundColor: currentView === 'home' ? '#007bff' : '#6c757d',
              color: 'white',
              border: 'none',
              borderRadius: '20px',
              cursor: 'pointer',
              fontSize: '0.9rem'
            }}
          >
            AI Chat
          </button>
          <button
            onClick={() => setCurrentView('contact')}
            style={{
              padding: '0.5rem 1rem',
              margin: '0 0.5rem',
              backgroundColor: currentView === 'contact' ? '#28a745' : '#6c757d',
              color: 'white',
              border: 'none',
              borderRadius: '20px',
              cursor: 'pointer',
              fontSize: '0.9rem'
            }}
          >
            Get Personal Plan
          </button>
        </div>
      </div>

      {currentView === 'contact' ? (
        <ContactForm />
      ) : !user ? (
        <Login onLogin={setUser} />
      ) : (
        <div>
          <div style={{ textAlign: 'center', marginBottom: '1rem' }}>
            <button
              onClick={() => setUser(null)}
              style={{
                padding: '0.5rem 1rem',
                backgroundColor: '#6c757d',
                color: 'white',
                border: 'none',
                borderRadius: '20px',
                cursor: 'pointer',
                fontSize: '0.9rem'
              }}
            >
              ‚Üê Start Over
            </button>
          </div>
          <ChatBox user={user} />
        </div>
      )}
    </div>
  );
}

export default App;
