entrypoint = "index.js"
modules = ["nodejs-22", "postgresql-16"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["sh", "-c", "echo 'No build step required for Node.js app'"]

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Fix and Test"

[[workflows.workflow]]
name = "Start Server"
author = 42978586
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "WillpowerFitness Complete Pipeline"
author = 42978586
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node setup_database.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Database Setup & Migration"
author = 42978586
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node setup_database.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Database setup completed successfully!\""

[[workflows.workflow]]
name = "Health Check & Monitoring"
author = 42978586
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -s http://localhost:5000/health || echo \"Server not responding\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Checking database connection...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node -e \"import('./lib/supabaseClient.js').then(({query}) => query('SELECT NOW()')).then(() => console.log('Database OK')).catch(e => console.log('Database Error:', e.message))\""

[[workflows.workflow]]
name = "Production Launch"
author = 42978586
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node setup_database.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"WillpowerFitness AI is live at https://app.willpowerfitnessai.com\""

[[workflows.workflow]]
name = "Development with AI Features"
author = 42978586
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node setup_database.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Restart Server"
author = 42978586
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node index.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Run"
author = 42978586
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

